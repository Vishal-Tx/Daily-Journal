<%- include("partials/header"); -%>

        <h1>Compose</h1>

        <form action="/compose" method="post" class="composeForm">
            <div class="form-group">
                <label for="userInputTitle">Title</label>
                <input type="text" name="userInputTitle" autofocus="autofocus" class="form-control">
            </div>

            <div class="form-group">
                <label for="userInputPost">Post</label>
                <textarea class="form-control" name="userInputPost" rows="4" cols="50"></textarea>
            </div>
            <button type="submit" name="submitButton" class="btn btn-primary">Publish</button>
        </form>


    <%- include("partials/footer"); -%>